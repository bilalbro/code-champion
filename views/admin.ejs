<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%- include('css.ejs')  %>
   <title>Admin panel</title>
</head>
<body class="bg-light p-md-5 text-center">
   <div class="container p-4" style="max-width: 600px;">
      <h1>CodeChampion 2022</h1>
      <h2 class="fw-light">Admin Panel</h2>
      <form method="post" class="bg-white p-3 p-md-4 mt-5 mx-auto text-start shadow rounded-3" style="max-width: 400px;">
         <h5>Sign in</h5>
         <% if (typeof errorMessageList !== 'undefined') { %>
            <div class="alert alert-danger mt-4">
               <h6>Errors:</h6>
               <ul class="mb-0">
                  <% errorMessageList.forEach(errorMessage => { %>
                     <li><%= errorMessage %> </li>
                  <% }) %>
               </ol>
            </div>
         <% } %>
         <div class="form-group mt-4">
            <label class="form-label">Username</label>
            <input autocomplete="off" type="text" name="username" value="<%= typeof userInput !== 'undefined' ? userInput.username : '' %>" class="form-control">
         </div>
         <div class="form-group mt-4">
            <label class="form-label">Password</label>
            <div class="input-group">
               <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
               <input type="password" name="password" class="form-control">
            </div>
         </div>
         <div class="form-group mt-4">
            <button class="btn btn-primary">Sign in</button>
         </div>
      </form>
   </div>  
</body>
</html>